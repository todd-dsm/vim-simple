# Better Bash snippets with [[ ]]

# Shebang
snippet #!
	#!/usr/bin/env bash

snippet bash
	#!/usr/bin/env bash

snippet sbash
	#!/usr/bin/env bash
	set -euo pipefail

snippet if
	if [[ ${1:condition} ]]; then
		${0}
	fi
snippet elif
	elif [[ ${1:condition} ]]; then
		${0}
snippet for
	for ${1:i} in ${2:words}; do
		${0}
	done
snippet while
	while [[ ${1:condition} ]]; do
		${0}
	done
snippet case
	case ${1:word} in
		${2:pattern})
			${0}
			;;
	esac
